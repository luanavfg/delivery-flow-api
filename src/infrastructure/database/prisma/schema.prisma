generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DeliveryStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}

model Courier {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime?
  Delivery  Delivery[]
}

model Delivery {
  id             String         @id @default(uuid())
  item           String
  status         DeliveryStatus
  destinyAddress String
  courierId      String
  courier        Courier        @relation(fields: [courierId], references: [id])
  createdAt      DateTime       @default(now())
  updatedAt      DateTime?
}
